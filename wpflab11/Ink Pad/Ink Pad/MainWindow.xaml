<Window x:Name="Ink_Pad" x:Class="Ink_Pad.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Ink_Pad"
        mc:Ignorable="d"
        Title="MainWindow" Height="550" Width="370" Background="#FFE4E4E4">
    <Grid>
        <InkCanvas x:Name="InkCanvas" Margin="2,0,0,80" UseCustomCursor="True" Background="#FFFFF9B9"/>
        <Button Content="Clear" HorizontalAlignment="Left" Margin="35,475,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click"/>
        <Button Content="Close" HorizontalAlignment="Left" Margin="249,480,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click_1"/>

    </Grid>
</Window>
